{
  "name": "ellies",
  "version": "0.0.5",
  "description": "a semantic component library in React",
  "main": "dist/index.js",
  "scripts": {
    "test": "node scripts/test.js",
    "cover": "node scripts/test.js --coverage",
    "build": "babel lib -d dist",
    "watch": "babel lib -w -d dist",
    "lint": "eslint lib/**: exit 0",
    "lint:watch": "esw -w lib/**",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patrickrauls/ellies.git"
  },
  "author": "Patrick Rauls",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/patrickrauls/ellies/issues"
  },
  "homepage": "https://github.com/patrickrauls/ellies#readme",
  "jest": {
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ],
    "collectCoverageFrom": [
      "lib/**/*.{js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/lib/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/lib/**/?(*.)(spec|test).{js,jsx,mjs}"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "chai": "^4.1.2",
    "codecov": "^3.0.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.19.1",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "eslint-watch": "^3.1.4",
    "jest": "^22.4.3",
    "mocha": "^5.1.1",
    "polished": "^1.9.2",
    "prop-types": "^15.6.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "styled-components": "^3.2.6"
  }
}
